<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivty"
    android:background="@color/teal_200">

    <EditText
        android:id="@+id/KullaniciAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ad"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/KullaniciSoyAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Soyad"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_below="@id/KullaniciAdi"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/KullaniciYas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DoÄŸum Tarihi"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_below="@id/KullaniciSoyAdi"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/KullaniciButtonKaydet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/KullaniciYas"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="35dp"
        android:text="Kaydet"/>


</RelativeLayout>